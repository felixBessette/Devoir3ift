<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="342dp"
        android:layout_height="563dp"
        app:cardBackgroundColor="@color/design_default_color_secondary"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="359dp"
            android:layout_height="564dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="@string/choisir_avat"
                android:textAlignment="center"
                android:textColor="@color/text_blue"
                android:textSize="19sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/real_blue"
                app:layout_constraintTop_toBottomOf="@+id/card2"
                tools:layout_editor_absoluteX="162dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView45"
                        android:layout_width="105dp"
                        android:layout_height="98dp"
                        app:srcCompat="@drawable/avatar2" />

                    <ImageView
                        android:id="@+id/imageView62"
                        android:layout_width="118dp"
                        android:layout_height="97dp"
                        app:srcCompat="@drawable/avatar9" />

                    <ImageView
                        android:id="@+id/imageView43"
                        android:layout_width="107dp"
                        android:layout_height="97dp"
                        android:layout_marginStart="4dp"
                        app:srcCompat="@drawable/ic_baseline_mood_24" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/real_blue"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                tools:layout_editor_absoluteX="162dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView443"
                        android:layout_width="105dp"
                        android:layout_height="98dp"
                        app:srcCompat="@drawable/avatar10" />

                    <ImageView
                        android:id="@+id/imageView632"
                        android:layout_width="118dp"
                        android:layout_height="97dp"
                        app:srcCompat="@drawable/avatar12" />

                    <ImageView
                        android:id="@+id/imageView244"
                        android:layout_width="107dp"
                        android:layout_height="97dp"
                        android:layout_marginStart="4dp"
                        app:srcCompat="@drawable/avatar13" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/real_blue"
                app:layout_constraintTop_toBottomOf="@+id/card1"
                tools:layout_editor_absoluteX="162dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="105dp"
                        android:layout_height="98dp"
                        app:srcCompat="@drawable/ic_baseline_self_improvement_24" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="118dp"
                        android:layout_height="97dp"
                        app:srcCompat="@drawable/avatar3" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="107dp"
                        android:layout_height="97dp"
                        android:layout_marginStart="4dp"
                        app:srcCompat="@drawable/avatar7" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/real_blue"
                app:layout_constraintTop_toBottomOf="@+id/card3"
                tools:layout_editor_absoluteX="162dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView4324"
                        android:layout_width="105dp"
                        android:layout_height="98dp"
                        app:srcCompat="@drawable/ic_baseline_account_circle_24" />

                    <ImageView
                        android:id="@+id/imageView6324"
                        android:layout_width="118dp"
                        android:layout_height="97dp"
                        app:srcCompat="@drawable/avatar12" />

                    <ImageView
                        android:id="@+id/imageView324234"
                        android:layout_width="107dp"
                        android:layout_height="97dp"
                        android:layout_marginStart="4dp"
                        app:srcCompat="@drawable/avatar7" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/real_blue"
                app:layout_constraintTop_toBottomOf="@+id/card4"
                tools:layout_editor_absoluteX="162dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageVie23w4"
                        android:layout_width="105dp"
                        android:layout_height="98dp"
                        app:srcCompat="@drawable/ic_baseline_sailing_24" />

                    <ImageView
                        android:id="@+id/imag4324eView6"
                        android:layout_width="118dp"
                        android:layout_height="97dp"
                        app:srcCompat="@drawable/ic_baseline_two_wheeler_24" />

                    <ImageView
                        android:id="@+id/imag432eView"
                        android:layout_width="107dp"
                        android:layout_height="97dp"
                        android:layout_marginStart="4dp"
                        app:srcCompat="@drawable/avatar13" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <ImageButton
                android:id="@+id/close"
                android:layout_width="34dp"
                android:layout_height="22dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:tint="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_close_24" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>