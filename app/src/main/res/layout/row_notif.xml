<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:weightSum="1"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="398dp"
        android:layout_height="187dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/divider_style">

            <TextView
                android:id="@+id/profile_text1"
                android:layout_width="149dp"
                android:layout_height="39dp"
                android:layout_marginEnd="48dp"
                android:text="TextView"
                android:textColor="@color/text_blue"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@+id/likeButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="141dp"
                android:layout_height="135dp"
                android:contentDescription="@string/profile"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.027"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/avatar" />

            <Button
                android:id="@+id/profile_button"
                android:layout_width="99dp"
                android:layout_height="48dp"
                android:layout_marginEnd="88dp"
                android:background="@drawable/top_bar"
                android:text="@string/profile"
                android:textColor="@color/text_blue"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.942" />

            <ImageButton
                android:id="@+id/likeButton"
                android:layout_width="105dp"
                android:layout_height="34dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/transparent"
                android:scaleType="fitStart"
                app:layout_constraintBottom_toTopOf="@+id/profile_button"
                app:layout_constraintStart_toEndOf="@+id/profile_img"
                app:srcCompat="@drawable/ic_baseline_person_add_alt_1_24" />

            <TextView
                android:id="@+id/notif_friends_accept"
                android:layout_width="70dp"
                android:layout_height="21dp"
                android:text="@string/accept"
                android:textColor="@color/text_blue"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/likeButton"
                app:layout_constraintEnd_toEndOf="@+id/likeButton"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/likeButton"
                app:layout_constraintTop_toTopOf="@+id/likeButton"
                app:layout_constraintVertical_bias="0.461" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="171dp"
                android:layout_height="29dp"
                android:layout_marginTop="24dp"
                android:text="@string/demande"
                android:textColor="@color/text_blue"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/profile_img"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/refuse_request"
                android:layout_width="115dp"
                android:layout_height="35dp"
                android:layout_marginStart="24dp"
                android:background="@android:color/transparent"
                android:scaleType="fitStart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/likeButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.585"
                app:srcCompat="@drawable/ic_baseline_close_24" />

            <TextView
                android:id="@+id/friends_notif_refuse"
                android:layout_width="72dp"
                android:layout_height="23dp"
                android:text="@string/refuser"
                android:textAlignment="textStart"
                android:textColor="@color/text_blue"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/refuse_request"
                app:layout_constraintEnd_toEndOf="@+id/refuse_request"
                app:layout_constraintHorizontal_bias="0.72"
                app:layout_constraintStart_toStartOf="@+id/refuse_request"
                app:layout_constraintTop_toTopOf="@+id/refuse_request"
                app:layout_constraintVertical_bias="0.416" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>