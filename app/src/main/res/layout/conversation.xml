<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".messages_section.Conversation">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/convo_recycler"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_below="@+id/convo_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="54dp" />

    <SearchView
        android:layout_width="332dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/border"
        android:searchHintIcon="@drawable/ic_baseline_dehaze_24"
        android:searchIcon="@color/white" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="44dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="10dp"
        android:background="@android:drawable/screen_background_light_transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_send_24" />

    <ImageView
        android:id="@+id/convo_img"
        android:layout_width="132dp"
        android:layout_height="94dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="94dp"
        android:layout_marginTop="63dp"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/convo_name"
        android:layout_width="148dp"
        android:layout_height="59dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="26dp"
        android:layout_toEndOf="@+id/convo_img"
        android:fontFamily="sans-serif-medium"
        android:text="TextView"
        android:textSize="18sp" />
</RelativeLayout>


